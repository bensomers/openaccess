<% form_for @post do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <%= f.hidden_field :time, :value => DateTime.now %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
