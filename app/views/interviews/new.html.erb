<h1>New interview</h1>

<% form_for(@interview) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :interviewee %><br />
    <%= f.text_field :interviewee %>
  </p>
  <p>
    <%= f.label :interviewer %><br />
    <%= f.text_field :interviewer %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', interviews_path %>
