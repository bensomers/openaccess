<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
  <title>Open Access</title>
  <meta http-equiv="content-type" content="text/html; charset=iso-8859-1">
    <%= stylesheet_link_tag 'application', 'menu', 'niftyCorners', 'flash' %>
    <%= javascript_include_tag :defaults, 'niftycube.js' %> 

    <script type="text/javascript">
      window.onload=function(){
      Nifty("div#box","transparent");
      }
    </script>

    <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
    try {
    var pageTracker = _gat._getTracker("UA-8877846-1");
    pageTracker._trackPageview();
    } catch(err) {}</script>

  </head>

  <body>

    <div id='box'>

        <div id="tabs">
          <ul>
            <li><%= link_to '<span>Home</span>', home_path %></li>
            <li><%= link_to '<span>News</span>',  posts_path  %></li>
            <li><%= link_to '<span>Interviews</span>', interviews_path %></li>
            <% for page in @pages %>
              <li><%= link_to '<span>' + page.title + '</span>', '/static/' +
                page.permalink %></li>
            <% end %>        
          </ul>
        </div>
        
        <%= display_flash_messages %>

        <div id="main">
          <% if logged_in? %>
            <%= render :partial => "layouts/logged_in" %>
          <% end %>      
          <%= yield :layout %>
        </div>

        <%= render :partial => "layouts/footer" %>

    </div>

  </body>

</html>
